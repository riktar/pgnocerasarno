    <gap:plugin name="org.apache.cordova.camera" version="0.3.6" />
    <gap:plugin name="org.apache.cordova.media" spec="0.2.16" source="pgb" />

    
    
    <preference name="orientation" value="portrait" />
    
    <access origin="*" />
    
